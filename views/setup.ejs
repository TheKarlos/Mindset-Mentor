<html>

<head>
    <% include ../partials/head %>
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/css/tempusdominus-bootstrap-4.min.css" />
    <link rel="stylesheet" href="/login.css">

    <script src="/setup.js"></script>
</head>

<body>

    <body>
        <div class="d-flex flex-column align-items-center justify-content-center h-100">
            <form action="/setup" id="form">
                <h2 class="text-center text-white">Setup</h2>
                <div class="form-group">
                    <div class="input-group" id="datetimepicker1" data-target-input="nearest">
                        <div class="input-group-prepend" data-target="#datetimepicker1" data-toggle="datetimepicker">
                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                        </div>
                        <input type="text" name="DOB" class="form-control datetimepicker-input" data-target="#datetimepicker1"
                            placeholder="Date of birth" />

                    </div>
                </div>
                <div class="form-group text-white" id="genderSelectGroup">
                    <label class="form-group-label" for="genderSelectGroup">Gender:</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="genderSelect" id="genderSelectMale"
                            value="male" checked>
                        <label class="form-check-label" for="genderSelectMale">
                            Male
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="genderSelect" id="genderSelectFemale"
                            value="female">
                        <label class="form-check-label" for="genderSelectFemale">
                            Female
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="genderSelect" id="genderSelectOther"
                            value="other">
                        <label class="form-check-label" for="genderSelectOther">
                            Other
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="text-white" for="problemsSelect">Problems:</label>
                    <select multiple name="problem-list" class="form-control" id="problemsSelect">
                        <option>Loneliness</option>
                        <option>Study/Work</option>
                        <option>Family/Home</option>
                        <option>Depression</option>
                        <option>Sleep</option>
                        <option>Obesity</option>
                        <option>Addiction</option>
                        <option>Stress/Anxiety</option>
                        <option>Bullying</option>
                        <option>Diseases</option>
                        <option>Discrimination</option>
                        <option>Body Image</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="text-white" for="likesSelect">Hobbies/Interests:</label>
                    <select multiple name="likes-list" class="form-control" id="likesSelect">
                        <option>Social/Games</option>
                        <option>Sport</option>
                        <option>Learning</option>
                        <option>Music</option>
                        <option>Outdoor</option>
                        <option>Creative</option>
                        <option>Hobbies</option>
                    </select>
                </div>
                <div class="form-group">
                    <button type="submit" onclick="submitForm(event);" class="btn btn-block bg-primary">Submit</button>
                </div>
            </form>
        </div>
        <% include ../partials/scripts %>
        <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
        <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/js/tempusdominus-bootstrap-4.min.js"></script>
    </body>

</html>